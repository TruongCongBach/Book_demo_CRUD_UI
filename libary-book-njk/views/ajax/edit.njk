{% extends 'home.html'%}
{% block title %}
Create Book
{% endblock %}

{% block a %}
Edit Book
{% endblock %}

{% block content %}
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-4 col-md-offset-4">
                    <form action="/book/{{book.getId()}}" method="post">
                        <div class="form-group">
                            <label for="title">Title:</label><br>
                            <input id="title" class="form-control" value={{book.getTitle()}} type="text" name="title">
                        </div>
                        <div class="form-group">
                            <label for="author">Author:</label><br>
                            <input id="author" class="form-control" value={{book.getAuthor()}} type="text" name="author">
                        </div>
                        <div class="form-group">
                            <label for="publisher">Publisher:</label><br>
                            <select class="form-control" id="publisher" name="publisher_id">
                                {% for publisher in publishers %}
                                <option value="{{publisher.id}}">
                                    {{publisher.name}}
                                </option>
                                {% endfor %}
                            </select>
                        </div>

                        <div class="form-group">
                            <label for="price">Price</label><br>
                            <input id="price" class="form-control" value={{book.getPrice()}} type="number" name="price">
                        </div>
                        <div>
                            <br>
                            <input id="send" class="btn btn-success " type="submit" value="Save">
                        </div>
                    </form>
                </div>
            </div>
        </div>

<script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
<script type="text/javascript" src="/javascripts/create.js"></script>
{% endblock %}